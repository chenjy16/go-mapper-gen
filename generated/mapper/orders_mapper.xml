<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//gobatis.org//DTD Mapper 3.0//EN" "http://gobatis.org/dtd/gobatis-3-mapper.dtd">

<mapper namespace="OrdersDAO">

    <!-- 结果映射 -->
    <resultMap id="OrdersResultMap" type="Orders">
        
        
        <id property="Id" column="id" />
        
        
        
        <result property="OrderNo" column="order_no" />
        
        
        
        <result property="UserId" column="user_id" />
        
        
        
        <result property="TotalAmount" column="total_amount" />
        
        
        
        <result property="Status" column="status" />
        
        
        
        <result property="PaymentMethod" column="payment_method" />
        
        
        
        <result property="ShippingAddress" column="shipping_address" />
        
        
        
        <result property="Remark" column="remark" />
        
        
        
        <result property="CreatedAt" column="created_at" />
        
        
        
        <result property="UpdatedAt" column="updated_at" />
        
        
    </resultMap>

    <!-- 基础字段列表 -->
    <sql id="Base_Column_List">
        id, order_no, user_id, total_amount, status, payment_method, shipping_address, remark, created_at, updated_at
    </sql>

    <!-- 插入字段列表（不包含主键） -->
    <sql id="Insert_Column_List">order_no, user_id, total_amount, status, payment_method, shipping_address, remark, created_at, updated_at
    </sql>

    <!-- 插入值列表（不包含主键） -->
    <sql id="Insert_Value_List">#{OrderNo}, #{UserId}, #{TotalAmount}, #{Status}, #{PaymentMethod}, #{ShippingAddress}, #{Remark}, #{CreatedAt}, #{UpdatedAt}
    </sql>

    <!-- 更新字段列表（不包含主键） -->
    <sql id="Update_Set_List">order_no = #{OrderNo}, user_id = #{UserId}, total_amount = #{TotalAmount}, status = #{Status}, payment_method = #{PaymentMethod}, shipping_address = #{ShippingAddress}, remark = #{Remark}, created_at = #{CreatedAt}, updated_at = #{UpdatedAt}
    </sql>

    <!-- Insert 方法 - 插入操作 -->
    <!-- Insert 插入单个Orders记录 -->
    <insert id="Insert" parameterType="Orders">
        INSERT INTO orders (
            <include refid="Insert_Column_List" />
        ) VALUES (
            <include refid="Insert_Value_List" />
        )
    </insert>

    <!-- InsertBatch 批量插入Orders记录 -->
    <insert id="InsertBatch" parameterType="map">
        INSERT INTO orders (
            <include refid="Insert_Column_List" />
        ) VALUES
        <foreach collection="records" item="item" separator=",">
            (#{item.OrderNo}, #{item.UserId}, #{item.TotalAmount}, #{item.Status}, #{item.PaymentMethod}, #{item.ShippingAddress}, #{item.Remark}, #{item.CreatedAt}, #{item.UpdatedAt})
        </foreach>
    </insert>

    <!-- 兼容性方法 - Create -->
    <insert id="Create" parameterType="Orders">
        INSERT INTO orders (
            <include refid="Insert_Column_List" />
        ) VALUES (
            <include refid="Insert_Value_List" />
        )
    </insert>

    <!-- 兼容性方法 - CreateBatch -->
    <insert id="CreateBatch" parameterType="map">
        INSERT INTO orders (
            <include refid="Insert_Column_List" />
        ) VALUES
        <foreach collection="Items" item="item" separator=",">
            (#{item.OrderNo}, #{item.UserId}, #{item.TotalAmount}, #{item.Status}, #{item.PaymentMethod}, #{item.ShippingAddress}, #{item.Remark}, #{item.CreatedAt}, #{item.UpdatedAt})
        </foreach>
    </insert>

    <!-- Select 方法 - 查询操作 -->

    <!-- SelectById 根据ID查询Orders记录 -->
    <select id="SelectById" parameterType="*int" resultMap="OrdersResultMap">
        SELECT 
            <include refid="Base_Column_List" />
        FROM orders
        WHERE id = #{Id}
    </select>


    <!-- SelectAll 查询所有Orders记录 -->
    <select id="SelectAll" resultMap="OrdersResultMap">
        SELECT 
            <include refid="Base_Column_List" />
        FROM orders
        ORDER BY id
    </select>

    <!-- SelectByPage 分页查询Orders记录 -->
    <select id="SelectByPage" parameterType="map" resultMap="OrdersResultMap">
        SELECT 
            <include refid="Base_Column_List" />
        FROM orders
        ORDER BY id
        LIMIT #{limit} OFFSET #{offset}
    </select>

    <!-- SelectByCondition 根据条件查询Orders记录 -->
    <select id="SelectByCondition" parameterType="map" resultMap="OrdersResultMap">
        SELECT 
            <include refid="Base_Column_List" />
        FROM orders
        <where>
            <if test="condition != null and condition != ''">
                ${condition}
            </if>
        </where>
        ORDER BY id
    </select>

    <!-- Update 方法 - 更新操作 -->

    <!-- UpdateById 根据ID更新Orders记录 -->
    <update id="UpdateById" parameterType="Orders">
        UPDATE orders
        SET <include refid="Update_Set_List" />
        WHERE id = #{Id}
    </update>


    <!-- Delete 方法 - 删除操作 -->

    <!-- DeleteById 根据ID删除Orders记录 -->
    <delete id="DeleteById" parameterType="*int">
        DELETE FROM orders
        WHERE id = #{Id}
    </delete>

    <!-- DeleteByIds 根据ID列表批量删除Orders记录 -->
    <delete id="DeleteByIds" parameterType="map">
        DELETE FROM orders
        WHERE id IN
        <foreach collection="ids" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <!-- ExistsById 检查指定ID的Orders记录是否存在 -->
    <select id="ExistsById" parameterType="*int" resultType="bool">
        SELECT COUNT(1) > 0
        FROM orders
        WHERE id = #{Id}
    </select>


    <!-- Count 方法 - 计数操作 -->
    <!-- Count 获取Orders记录总数 -->
    <select id="Count" resultType="int64">
        SELECT COUNT(1)
        FROM orders
    </select>

    <!-- CountByCondition 根据条件获取Orders记录数量 -->
    <select id="CountByCondition" parameterType="map" resultType="int64">
        SELECT COUNT(1)
        FROM orders
        <where>
            <if test="condition != null and condition != ''">
                ${condition}
            </if>
        </where>
    </select>

    <!-- 兼容性方法 -->

    <!-- 兼容性方法 - GetByID -->
    <select id="GetByID" parameterType="*int" resultMap="OrdersResultMap">
        SELECT 
            <include refid="Base_Column_List" />
        FROM orders
        WHERE id = #{Id}
    </select>

    <!-- 兼容性方法 - UpdateByID -->
    <update id="UpdateByID" parameterType="Orders">
        UPDATE orders
        SET <include refid="Update_Set_List" />
        WHERE id = #{Id}
    </update>

    <!-- 兼容性方法 - DeleteByID -->
    <delete id="DeleteByID" parameterType="*int">
        DELETE FROM orders
        WHERE id = #{Id}
    </delete>

    <!-- 兼容性方法 - DeleteByIDs -->
    <delete id="DeleteByIDs" parameterType="map">
        DELETE FROM orders
        WHERE id IN
        <foreach collection="IDs" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <!-- 兼容性方法 - Exists -->
    <select id="Exists" parameterType="*int" resultType="int64">
        SELECT COUNT(1)
        FROM orders
        WHERE id = #{Id}
    </select>


    <!-- 兼容性方法 - GetAll -->
    <select id="GetAll" resultMap="OrdersResultMap">
        SELECT 
            <include refid="Base_Column_List" />
        FROM orders
        ORDER BY id
    </select>

    <!-- 兼容性方法 - GetByPage -->
    <select id="GetByPage" parameterType="map" resultMap="OrdersResultMap">
        SELECT 
            <include refid="Base_Column_List" />
        FROM orders
        ORDER BY id
        LIMIT #{limit} OFFSET #{offset}
    </select>

    <!-- 兼容性方法 - FindByCondition -->
    <select id="FindByCondition" parameterType="map" resultMap="OrdersResultMap">
        SELECT 
            <include refid="Base_Column_List" />
        FROM orders
        <where>
            
            <if test="Id != null">
                AND id = #{Id}
            </if>
            
            <if test="OrderNo != null and OrderNo != ''">
                AND order_no = #{OrderNo}
            </if>
            
            <if test="UserId != null">
                AND user_id = #{UserId}
            </if>
            
            <if test="TotalAmount != null">
                AND total_amount = #{TotalAmount}
            </if>
            
            <if test="Status != null">
                AND status = #{Status}
            </if>
            
            <if test="PaymentMethod != null">
                AND payment_method = #{PaymentMethod}
            </if>
            
            <if test="ShippingAddress != null">
                AND shipping_address = #{ShippingAddress}
            </if>
            
            <if test="Remark != null">
                AND remark = #{Remark}
            </if>
            
            <if test="CreatedAt != null">
                AND created_at = #{CreatedAt}
            </if>
            
            <if test="UpdatedAt != null">
                AND updated_at = #{UpdatedAt}
            </if>
            
        </where>
        ORDER BY id
    </select>

</mapper>
