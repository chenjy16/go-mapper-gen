<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//gobatis.org//DTD Mapper 3.0//EN" "http://gobatis.org/dtd/gobatis-3-mapper.dtd">

<mapper namespace="OrdersDAO">

    <!-- 结果映射 -->
    <resultMap id="OrdersResultMap" type="Orders">
        
        
        <id property="Id" column="id" />
        
        
        
        <result property="UserId" column="user_id" />
        
        
        
        <result property="TotalAmount" column="total_amount" />
        
        
        
        <result property="Status" column="status" />
        
        
        
        <result property="OrderDate" column="order_date" />
        
        
        
        <result property="ShippingAddress" column="shipping_address" />
        
        
        
        <result property="CreatedAt" column="created_at" />
        
        
        
        <result property="UpdatedAt" column="updated_at" />
        
        
    </resultMap>

    <!-- 基础字段列表 -->
    <sql id="Base_Column_List">
        id, user_id, total_amount, status, order_date, shipping_address, created_at, updated_at
    </sql>

    <!-- 插入字段列表（不包含主键） -->
    <sql id="Insert_Column_List">user_id, total_amount, status, order_date, shipping_address, created_at, updated_at
    </sql>

    <!-- 插入值列表（不包含主键） -->
    <sql id="Insert_Value_List">#{UserId}, #{TotalAmount}, #{Status}, #{OrderDate}, #{ShippingAddress}, #{CreatedAt}, #{UpdatedAt}
    </sql>

    <!-- 更新字段列表（不包含主键） -->
    <sql id="Update_Set_List">user_id = #{UserId}, total_amount = #{TotalAmount}, status = #{Status}, order_date = #{OrderDate}, shipping_address = #{ShippingAddress}, created_at = #{CreatedAt}, updated_at = #{UpdatedAt}
    </sql>

    <!-- Insert 方法 - 插入操作 -->
    <!-- Insert 插入单个Orders记录 -->
    <insert id="Insert" parameterType="Orders">
        INSERT INTO orders (
            <include refid="Insert_Column_List" />
        ) VALUES (
            <include refid="Insert_Value_List" />
        )
    </insert>

    <!-- InsertBatch 批量插入Orders记录 -->
    <insert id="InsertBatch" parameterType="map">
        INSERT INTO orders (
            <include refid="Insert_Column_List" />
        ) VALUES
        <foreach collection="records" item="item" separator=",">
            (#{item.UserId}, #{item.TotalAmount}, #{item.Status}, #{item.OrderDate}, #{item.ShippingAddress}, #{item.CreatedAt}, #{item.UpdatedAt})
        </foreach>
    </insert>

    <!-- 兼容性方法 - Create -->
    <insert id="Create" parameterType="Orders">
        INSERT INTO orders (
            <include refid="Insert_Column_List" />
        ) VALUES (
            <include refid="Insert_Value_List" />
        )
    </insert>

    <!-- 兼容性方法 - CreateBatch -->
    <insert id="CreateBatch" parameterType="map">
        INSERT INTO orders (
            <include refid="Insert_Column_List" />
        ) VALUES
        <foreach collection="Items" item="item" separator=",">
            (#{item.UserId}, #{item.TotalAmount}, #{item.Status}, #{item.OrderDate}, #{item.ShippingAddress}, #{item.CreatedAt}, #{item.UpdatedAt})
        </foreach>
    </insert>

    <!-- Select 方法 - 查询操作 -->

    <!-- SelectById 根据ID查询Orders记录 -->
    <select id="SelectById" parameterType="*int" resultMap="OrdersResultMap">
        SELECT 
            <include refid="Base_Column_List" />
        FROM orders
        WHERE id = #{Id}
    </select>


    <!-- SelectAll 查询所有Orders记录 -->
    <select id="SelectAll" resultMap="OrdersResultMap">
        SELECT 
            <include refid="Base_Column_List" />
        FROM orders
        ORDER BY id
    </select>

    <!-- SelectByPage 分页查询Orders记录 -->
    <select id="SelectByPage" parameterType="map" resultMap="OrdersResultMap">
        SELECT 
            <include refid="Base_Column_List" />
        FROM orders
        ORDER BY id
        LIMIT #{limit} OFFSET #{offset}
    </select>

    <!-- SelectByCondition 根据条件查询Orders记录 -->
    <select id="SelectByCondition" parameterType="map" resultMap="OrdersResultMap">
        SELECT 
            <include refid="Base_Column_List" />
        FROM orders
        <where>
            <if test="condition != null and condition != ''">
                ${condition}
            </if>
        </where>
        ORDER BY id
    </select>

    <!-- Update 方法 - 更新操作 -->

    <!-- UpdateById 根据ID更新Orders记录 -->
    <update id="UpdateById" parameterType="Orders">
        UPDATE orders
        SET <include refid="Update_Set_List" />
        WHERE id = #{Id}
    </update>


    <!-- Delete 方法 - 删除操作 -->

    <!-- DeleteById 根据ID删除Orders记录 -->
    <delete id="DeleteById" parameterType="*int">
        DELETE FROM orders
        WHERE id = #{Id}
    </delete>

    <!-- DeleteByIds 根据ID列表批量删除Orders记录 -->
    <delete id="DeleteByIds" parameterType="map">
        DELETE FROM orders
        WHERE id IN
        <foreach collection="ids" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <!-- ExistsById 检查指定ID的Orders记录是否存在 -->
    <select id="ExistsById" parameterType="*int" resultType="bool">
        SELECT COUNT(1) > 0
        FROM orders
        WHERE id = #{Id}
    </select>


    <!-- Count 方法 - 计数操作 -->
    <!-- Count 获取Orders记录总数 -->
    <select id="Count" resultType="int64">
        SELECT COUNT(1)
        FROM orders
    </select>

    <!-- CountByCondition 根据条件获取Orders记录数量 -->
    <select id="CountByCondition" parameterType="map" resultType="int64">
        SELECT COUNT(1)
        FROM orders
        <where>
            <if test="condition != null and condition != ''">
                ${condition}
            </if>
        </where>
    </select>

    <!-- 兼容性方法 -->

    <!-- 兼容性方法 - GetByID -->
    <select id="GetByID" parameterType="*int" resultMap="OrdersResultMap">
        SELECT 
            <include refid="Base_Column_List" />
        FROM orders
        WHERE id = #{Id}
    </select>

    <!-- 兼容性方法 - UpdateByID -->
    <update id="UpdateByID" parameterType="Orders">
        UPDATE orders
        SET <include refid="Update_Set_List" />
        WHERE id = #{Id}
    </update>

    <!-- 兼容性方法 - DeleteByID -->
    <delete id="DeleteByID" parameterType="*int">
        DELETE FROM orders
        WHERE id = #{Id}
    </delete>

    <!-- 兼容性方法 - DeleteByIDs -->
    <delete id="DeleteByIDs" parameterType="map">
        DELETE FROM orders
        WHERE id IN
        <foreach collection="IDs" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <!-- 兼容性方法 - Exists -->
    <select id="Exists" parameterType="*int" resultType="int64">
        SELECT COUNT(1)
        FROM orders
        WHERE id = #{Id}
    </select>


    <!-- 兼容性方法 - GetAll -->
    <select id="GetAll" resultMap="OrdersResultMap">
        SELECT 
            <include refid="Base_Column_List" />
        FROM orders
        ORDER BY id
    </select>

    <!-- 兼容性方法 - GetByPage -->
    <select id="GetByPage" parameterType="map" resultMap="OrdersResultMap">
        SELECT 
            <include refid="Base_Column_List" />
        FROM orders
        ORDER BY id
        LIMIT #{limit} OFFSET #{offset}
    </select>

    <!-- 兼容性方法 - FindByCondition -->
    <select id="FindByCondition" parameterType="map" resultMap="OrdersResultMap">
        SELECT 
            <include refid="Base_Column_List" />
        FROM orders
        <where>
            
            <if test="Id != null">
                AND id = #{Id}
            </if>
            
            <if test="UserId != null">
                AND user_id = #{UserId}
            </if>
            
            <if test="TotalAmount != null">
                AND total_amount = #{TotalAmount}
            </if>
            
            <if test="Status != null">
                AND status = #{Status}
            </if>
            
            <if test="OrderDate != null">
                AND order_date = #{OrderDate}
            </if>
            
            <if test="ShippingAddress != null">
                AND shipping_address = #{ShippingAddress}
            </if>
            
            <if test="CreatedAt != null">
                AND created_at = #{CreatedAt}
            </if>
            
            <if test="UpdatedAt != null">
                AND updated_at = #{UpdatedAt}
            </if>
            
        </where>
        ORDER BY id
    </select>


    <!-- Example 方法 - 基于 Example 的查询操作 -->
    <!-- SelectByExample 根据Example条件查询Orders记录 -->
    <select id="SelectByExample" parameterType="github.com/chenjy16/gobatis/core/example.Example" resultMap="OrdersResultMap">
        SELECT 
            <include refid="Base_Column_List" />
        FROM orders
        <where>
            <if test="criteria != null and criteria.size() > 0">
                <foreach collection="criteria" item="criterion" separator="AND">
                    <choose>
                        <when test="criterion.noValue">
                            ${criterion.condition}
                        </when>
                        <when test="criterion.singleValue">
                            ${criterion.condition} #{criterion.value}
                        </when>
                        <when test="criterion.betweenValue">
                            ${criterion.condition} #{criterion.value} AND #{criterion.secondValue}
                        </when>
                        <when test="criterion.listValue">
                            ${criterion.condition}
                            <foreach collection="criterion.value" item="listItem" open="(" separator="," close=")">
                                #{listItem}
                            </foreach>
                        </when>
                    </choose>
                </foreach>
            </if>
        </where>
        <if test="orderByClause != null and orderByClause != ''">
            ORDER BY ${orderByClause}
        </if>
        <if test="limit != null">
            LIMIT #{limit}
        </if>
        <if test="offset != null">
            OFFSET #{offset}
        </if>
    </select>

    <!-- CountByExample 根据Example条件统计Orders记录数 -->
    <select id="CountByExample" parameterType="github.com/chenjy16/gobatis/core/example.Example" resultType="int64">
        SELECT COUNT(1)
        FROM orders
        <where>
            <if test="criteria != null and criteria.size() > 0">
                <foreach collection="criteria" item="criterion" separator="AND">
                    <choose>
                        <when test="criterion.noValue">
                            ${criterion.condition}
                        </when>
                        <when test="criterion.singleValue">
                            ${criterion.condition} #{criterion.value}
                        </when>
                        <when test="criterion.betweenValue">
                            ${criterion.condition} #{criterion.value} AND #{criterion.secondValue}
                        </when>
                        <when test="criterion.listValue">
                            ${criterion.condition}
                            <foreach collection="criterion.value" item="listItem" open="(" separator="," close=")">
                                #{listItem}
                            </foreach>
                        </when>
                    </choose>
                </foreach>
            </if>
        </where>
    </select>

    <!-- UpdateByExample 根据 Example 更新Orders记录 -->
    <update id="UpdateByExample" parameterType="map">
        UPDATE orders
        <set>
            
            <if test="record.UserId != null">
                user_id = #{record.UserId},
            </if>
            
            <if test="record.TotalAmount != null">
                total_amount = #{record.TotalAmount},
            </if>
            
            <if test="record.Status != null">
                status = #{record.Status},
            </if>
            
            <if test="record.OrderDate != null">
                order_date = #{record.OrderDate},
            </if>
            
            <if test="record.ShippingAddress != null">
                shipping_address = #{record.ShippingAddress},
            </if>
            
            <if test="record.CreatedAt != null">
                created_at = #{record.CreatedAt},
            </if>
            
            <if test="record.UpdatedAt != null">
                updated_at = #{record.UpdatedAt}
            </if>
            
        </set>
        <where>
            <if test="example.criteria != null and example.criteria.size() > 0">
                <foreach collection="example.criteria" item="criterion" separator="AND">
                    <choose>
                        <when test="criterion.noValue">
                            ${criterion.condition}
                        </when>
                        <when test="criterion.singleValue">
                            ${criterion.condition} #{criterion.value}
                        </when>
                        <when test="criterion.betweenValue">
                            ${criterion.condition} #{criterion.value} AND #{criterion.secondValue}
                        </when>
                        <when test="criterion.listValue">
                            ${criterion.condition}
                            <foreach collection="criterion.value" item="listItem" open="(" separator="," close=")">
                                #{listItem}
                            </foreach>
                        </when>
                    </choose>
                </foreach>
            </if>
        </where>
    </update>

    <!-- DeleteByExample 根据Example条件删除Orders记录 -->
    <delete id="DeleteByExample" parameterType="github.com/chenjy16/gobatis/core/example.Example">
        DELETE FROM orders
        <where>
            <if test="criteria != null and criteria.size() > 0">
                <foreach collection="criteria" item="criterion" separator="AND">
                    <choose>
                        <when test="criterion.noValue">
                            ${criterion.condition}
                        </when>
                        <when test="criterion.singleValue">
                            ${criterion.condition} #{criterion.value}
                        </when>
                        <when test="criterion.betweenValue">
                            ${criterion.condition} #{criterion.value} AND #{criterion.secondValue}
                        </when>
                        <when test="criterion.listValue">
                            ${criterion.condition}
                            <foreach collection="criterion.value" item="listItem" open="(" separator="," close=")">
                                #{listItem}
                            </foreach>
                        </when>
                    </choose>
                </foreach>
            </if>
        </where>
    </delete>


</mapper>
